<!-- Modal para vista móvil -->
<div
  id="mobileModal"
  class="hidden fixed inset-0 bg-black bg-opacity-50 flex justify-center items-center z-50"
>
  <div class="bg-white rounded-lg w-44 p-5 text-center shadow">
    <button
      id="closeModal"
      class="text-gray-500 hover:text-gray-800 text-xl font-bold"
      >&times;</button
    >
    <ol class="flex flex-col gap-4 mt-4">
      <li>
        <a href="#products" class="text-base font-semibold hover:text-[#E67817]"
          >Productos</a>
      </li>
      <li>
        <a
          href="#categories"
          class="text-base font-semibold hover:text-[#E67817]">Categorias</a>
      </li>
      <li>
        <a href="#contact" class="text-base font-semibold hover:text-[#E67817]"
          >Contacto</a>
      </li>
      <li>
        <a href="#about" class="text-base font-semibold hover:text-[#E67817]"
          >Acerca de</a>
      </li>
    </ol>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const menuButton = document.getElementById("menuButton");
    const modal = document.getElementById("mobileModal");
    const closeModalButton = document.getElementById("closeModal");

    function toggleModal() {
      if (modal) {
        modal.classList.toggle("hidden");
      }
    }

    // Abre el modal cuando se hace clic en el botón del menú
    if (menuButton) {
      menuButton.addEventListener("click", (event) => {
        event.preventDefault(); // Evita que el enlace se recargue
        toggleModal();
      });
    }

    // Cierra el modal cuando se hace clic en el botón de cerrar
    if (closeModalButton) {
      closeModalButton.addEventListener("click", toggleModal);
    }

    // Cierra el modal al hacer clic fuera del contenido del modal
    window.addEventListener("click", function (event) {
      if (
        modal &&
        !modal.classList.contains("hidden") &&
        event.target === modal
      ) {
        toggleModal();
      }
    });

    // Cierra el modal al hacer clic en cualquier enlace dentro del modal
    const modalLinks = modal ? modal.querySelectorAll("a") : [];
    modalLinks.forEach((link) => {
      link.addEventListener("click", toggleModal);
    });
  });
</script>
