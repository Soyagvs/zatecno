<!-- Modal -->
<div id="mobileModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex justify-center items-center z-50">
  <div class="bg-white rounded-lg w-44 p-5 text-center shadow">
    <button id="closeModal" class="text-gray-500 hover:text-gray-800 text-xl font-bold">&times;</button>
    <ol class="flex flex-col gap-4 mt-4">
      <li><a href="#products" class="text-base font-semibold hover:text-[#E67817]">Productos</a></li>
      <li><a href="#categories" class="text-base font-semibold hover:text-[#E67817]">Categorias</a></li>
      <li><a href="#contact" class="text-base font-semibold hover:text-[#E67817]">Contacto</a></li>
      <li><a href="#about" class="text-base font-semibold hover:text-[#E67817]">Acerca de</a></li>
    </ol>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const menuButton = document.getElementById("menuButton");
    const modal = document.getElementById("mobileModal");
    const closeModalButton = document.getElementById("closeModal");

    function toggleModal() {
      if (modal) {
        modal.classList.toggle("hidden");
      }
    }

    if (menuButton) {
      menuButton.addEventListener("click", toggleModal);
    }

    if (closeModalButton) {
      closeModalButton.addEventListener("click", toggleModal);
    }

    // Cierra la modal al hacer clic fuera del contenido de la modal
    window.addEventListener("click", function (event) {
      if (modal && event.target === modal) {
        toggleModal();
      }
    });

    // Cierra la modal al hacer clic en cualquier enlace dentro de la modal
    const modalLinks = modal ? modal.querySelectorAll("a") : [];
    modalLinks.forEach((link) => {
      link.addEventListener("click", toggleModal);
    });
  });
</script>
